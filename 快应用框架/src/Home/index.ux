<script>
    import router from '@system.router';
    import prompt from '@system.prompt';
    module.exports = {
        data: {
            active: '',
            childActive: '',
			slideAnimation:'',
			showCover:false,
			menuList:[1,2,3,4,5]
        },
        showChild: function (target) {
            if (this.active == target) {
                this.active = '';
				this.childActive = '';
            } else {
                this.active = target;
            }
        },
        showChildren: function (target) {
            if (this.childActive == target) {
                this.childActive = '';
            } else {
                this.childActive = target;
            }
        },
        changeActive: function (e) {
            var title = e.index == 0 ? '快应用组件展示' : (e.index == 1 ? '快应用接口能力展示' : '快应用模板展示');
            this.$page.setTitleBar({
                text: title
            });
        },
        showDetail: function (uri) {
            router.push({
                uri: uri
            })
        },
		hideMenu:function () {
			this.setSlide();
		},
		onMenuPress:function () {
            this.setSlide();
            this.$app.showMenu()
		},
		swipeShowMenu:function(e){
			if(e.direction == 'right'){
				this.setSlide();
			}
		},
		swipeCloseMenu:function(e){
			if(e.direction == 'left'){
				this.setSlide();
			}
		},
		setSlide:function(){
			this.showCover = !this.showCover;
			if(this.showCover){
				this.slideAnimation = 'slide-in';
			}else{
				this.slideAnimation = 'slide-out';
			}
		}
    }
</script>
